    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Docker: Attach to Node",
            "remoteRoot": "/usr/src/app"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File with streamlit server",
            "type": "debugpy",
            "request": "launch",
            "program": "bin/streamlit",
            "console": "integratedTerminal",

            "args": [
                "run",
                "${file}"
            ]
        }
    ]
}